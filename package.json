{
  "name": "@carnesen/bitcoin-config",
  "description": "A Node.js library for bitcoin server software configuration",
  "version": "0.0.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rimraf lib && npm run build",
    "build:watch": "tsc --watch",
    "lint": "tslint --project tsconfig.build.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test:unit && npm run build",
    "test:unit": "jest src",
    "test:unit:watch": "npm run test:unit -- --watch --coverage",
    "preversion": "npm test && npm run build:clean",
    "postversion": "npm publish"
  },
  "dependencies": {
    "@types/mkdirp": "0.5.2",
    "mkdirp": "0.5.1"
  },
  "devDependencies": {
    "@carnesen/tsconfig": "0.1.0",
    "@carnesen/tslint-config": "0.1.2",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.21",
    "@types/temp-write": "3.3.0",
    "@types/tempy": "0.2.0",
    "jest": "24.0.0",
    "rimraf": "2.6.3",
    "temp-write": "3.4.0",
    "tempy": "0.2.1",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "typescript": "3.3.1"
  },
  "files": [
    "src",
    "lib"
  ],
  "license": "MIT",
  "author": {
    "name": "Chris Arnesen",
    "email": "chris.arnesen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carnesen/bitcoin-config.git"
  },
  "bugs": {
    "url": "https://github.com/carnesen/bitcoin-config/issues"
  },
  "homepage": "https://github.com/carnesen/bitcoin-config#readme"
}
